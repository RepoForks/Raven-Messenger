<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="45dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal" >

    <!-- icon -->

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="6dp"
        android:src="@drawable/ic_social_person" />

    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_width="fill_parent"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/chat_rectangle"
            android:minHeight="100dp"       
            android:minWidth="150dp"       
            android:paddingLeft="5dp"
            android:paddingTop="5dp"   
     		android:paddingRight="5dp"
            android:orientation="vertical" >


           
               <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="190dp"
                android:maxHeight="140dp"
                android:minWidth="140dp"
                android:minHeight="100dp"
                android:background="#460769"
                android:paddingTop="50dp"
                android:paddingBottom="50dp"
                android:autoLink="web"

                android:src="@drawable/ic_action_content_picture"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingBottom="7dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/safeicon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="-3dp"
                    android:src="@drawable/ic_not_encrypted" />

                <TextView
                    android:id="@+id/date_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#999999"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>