<resources xmlns:android="http://schemas.android.com/apk/res/android">

    
 <style name="BlueCustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
      <!--  <item name="android:actionBarStyle">@style/BlueActionBar</item> --> 
    <item name="actionOverflowButtonStyle">@style/BlueCustomTheme.OverFlow</item>
    
    <!--   your app branding color for the app bar -->
    <item name="colorPrimary">#175ea2</item>
    <!--   darker variant for the status bar and contextual app bars -->
    <item name="colorPrimaryDark">#204f84</item>
     <item name="colorAccent">#204f84</item>
     
      <!-- theme UI controls like checkboxes and text fields 
    <item name="android:colorAccent">@color/accent</item>-->
</style>

  <style name="QuickPrefsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#175ea2</item>
    <!--   darker variant for the status bar and contextual app bars -->
    <item name="colorPrimaryDark">#204f84</item>
     <item name="colorAccent">#204f84</item>
     <item name="android:windowBackground">@color/background</item>
     <item name="android:textColor">#000000</item>
     <item name="android:textColorHint">#212121</item>
</style>

 
 
<style name="BlueActionBar" parent="Widget.AppCompat.ActionBar">
     <item name="android:background">#175ea2</item>
     <item name="android:titleTextStyle">@style/BlueCustomTheme.ActionBar.TitleTextStyle</item>
     <item name="titleTextStyle">@style/BlueCustomTheme.ActionBar.TitleTextStyle</item>
    <item name="android:subtitleTextStyle">@style/BlueCustomTheme.ActionBar.SubTitleTextStyle</item>
    <item name="subtitleTextStyle">@style/BlueCustomTheme.ActionBar.SubTitleTextStyle</item>

    <!--<item name="android:homeAsUpIndicator">@drawable/ic_action_navigation_previous_item_light</item>   -->
</style>

  <style name="BlueCustomTheme.ActionBar.TitleTextStyle" parent="Widget.AppCompat.Light.ActionBar">
    <item name="android:textColor">#FFFFFF</item>
  </style>

  
<style name="BlueCustomTheme.ActionBar.SubTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
    <item name="android:textColor">#FFFFFF</item>
  </style>

<style name="BlueCustomTheme.OverFlow">
    
    <item name="android:src">@drawable/ic_action_core_overflow_light</item>
    <item name="android:paddingRight">12dp</item>
</style>



  <style name="PreferenceStyle" parent="@style/BlueCustomTheme">
    <item name="actionBarStyle">@style/PreferenceActionBar</item>
  </style>

  <style name="PreferenceActionBar" parent="@style/BlueActionBar">
    <item name="displayOptions">showHome|homeAsUp|showTitle</item>
  </style>

</resources>
